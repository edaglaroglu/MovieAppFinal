@model UserModel
@*Generated from Custom Template.*@
@*Model namespace using directive should be added to _ViewImports.cshtml.*@

@{
    ViewData["Title"] = "Delete User";
}

<h1>@ViewData["Title"]</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>User</h4>
    <hr />

    <!--
        Partial views are used for rounding up common parts of the views.
        They can be used with or without model.
    -->
    <partial name="_Details" model="Model" />
    <!-- created under Views\Users\_Details.cshtml and this view's model is passed to the partial view to show model data -->
    <!--
        The id of the model will be sent to the Users controller Delete post action when we click the Yes submit button so that
        the user with the id can be deleted by the related service method.
    -->
    <form asp-action="Delete">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Yes" class="btn btn-danger" />&nbsp;&nbsp;
        <a asp-action="GetList" class="btn btn-success">No</a>
    </form>
</div>



